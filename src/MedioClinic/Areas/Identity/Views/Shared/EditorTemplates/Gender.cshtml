@using Identity.Models
@model Gender

@{ 
    var list = new List<SelectListItem>();

    foreach (var item in (Gender[])Enum.GetValues(typeof(Gender)))
    {
        list.Add(new SelectListItem(item.ToLocalizedString("General.Gender"), item.ToString(), item == Model));
    }
}

@Html.DropDownListFor(m => m, list)