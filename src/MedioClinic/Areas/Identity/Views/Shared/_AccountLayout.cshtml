@inject XperienceAdapter.Repositories.IMediaFileRepository MediaFileRepository

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var backgroundFile = await MediaFileRepository.GetMediaFileAsync("Identity", "identity-account.png");
    var background = Url.Content(backgroundFile?.MediaFileUrl?.RelativePath);
}

<main class="row mc-page-fold-right" style="background-image:url(@background)">
    @RenderBody()
</main>
